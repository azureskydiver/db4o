<project name="dRS" default="run-example">
	<!--
	
	Mar 16, 2007
	
	This build file is only used to run tests and example.
	
	To build dRS, please use db4o Build System v1.1 (dBS) -
	Refer to ../build-1.1/readme.txt in svn for details
	http://developer.db4o.com/ProjectSpaces/view.aspx/Db4o_Product_Design/Build-1.1
	
	-->
	<description>dRS build file for running tests and example</description>

	<path id="class.path" description="universal classpath for all targets">
		<fileset dir="lib">
			<include name="*.jar" />
		</fileset>
	</path>

	<target name="run-example" depends="">
		<java fork="true" classname="f1.stepbystep.StepByStepExample">
			<classpath refid="class.path" />
		</java>
	</target>
	
	<target name="run-regression" depends="">
		<java fork="true" classname="com.db4o.drs.test.all.AllDrsTests">
			<classpath refid="class.path" />
		</java>
	</target>
</project>