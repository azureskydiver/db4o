<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="property" default-lazy="false" default-cascade="all">
	<class name="com.db4o.drs.test.MapHolder">
		<id column="typed_id" type="long">
			<generator class="native"/>
		</id>

		<property name="name"/>

		<map name="map" table="MapContents">
			<key column="MapHolderId"/>
			<map-key type="string"/>
			<one-to-many class="com.db4o.drs.test.MapContent"/>
		</map>
	</class>
</hibernate-mapping>
