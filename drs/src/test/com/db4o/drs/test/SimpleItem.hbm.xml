<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="property" default-lazy="false" default-cascade="save-update">
	<class name="com.db4o.drs.test.SimpleItem">
		<id column="simple_item_id" type="long">
			<generator class="native"/>
		</id>
		<discriminator/>
		<property name="value"/>
		
		<many-to-one name="child" class="com.db4o.drs.test.SimpleItem" />
		<many-to-one name="parent" class="com.db4o.drs.test.SimpleListHolder" />
	</class>
</hibernate-mapping>