<?xml version="1.0"?>
<project name="db4ontutorial" default="build">

	<property name="db4o.dll" location="../../db4obuild/dist/dll/net/db4o.dll" />
	
	<property name="build.dir" location="bin" />
	
	<target name="build" depends="init">
		<csc targetType="library" destFile="${build.dir}/db4o-samples.dll">		
			<src dir="src">
				<include name="**/*.cs" />
			</src>
			
			<reference dir="${build.dir}">			
				<include name="db4o.dll" />
			</reference>
		</csc>
	</target>
	
	<target name="init">
		<mkdir dir="${build.dir}" />
		<copy todir="${build.dir}" file="${db4o.dll}" />
	</target>
	
	<target name="clean">
		<delete dir="${build.dir}" />
	</target>

</project>
