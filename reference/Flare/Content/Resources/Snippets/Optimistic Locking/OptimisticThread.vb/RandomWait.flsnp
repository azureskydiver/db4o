Private Sub RandomWait()Sub RandomWait()
            Try
                Dim r As Random = New Random
                Dim sleepTime As Integer = 5000 * r.Next(1)
                Thread.Sleep(sleepTime)
            Catch e As Exception
                Console.WriteLine(&quot;Interrupted!&quot;)
            End Try
        End Sub</pre>    </body></html>