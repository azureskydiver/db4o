<UserControl x:Class="Db4oTutorial.ExampleRunner.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk">

    <StackPanel x:Name="LayoutRoot" Orientation="Vertical" >
        <StackPanel Orientation="Vertical">
            <Border Padding="5" Background="#4E87D4" Height="25" VerticalAlignment="Top">
                <sdk:Label VerticalAlignment="Center" Foreground="White">Code Editor:</sdk:Label>
            </Border>
            <TextBox Height="120" Margin="0,0,0,0"
                 Name="codeBox" />
        </StackPanel>
        <StackPanel Orientation="Vertical">

            <Border Padding="5" Background="#4E87D4" Height="25" VerticalAlignment="Top">
                <sdk:Label VerticalAlignment="Center" Foreground="White">Output:</sdk:Label>
            </Border>

            <TextBox Height="120" 
                     Margin="0,0,0,0"
                 Name="outputBox"
                     IsEnabled="False"/>

        </StackPanel>
    </StackPanel>
</UserControl>
