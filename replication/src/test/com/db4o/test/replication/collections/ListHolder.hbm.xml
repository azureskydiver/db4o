<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="property" default-lazy="false" default-cascade="all">
	<class name="com.db4o.test.replication.collections.ListHolder">
		<id column="id" type="long">
			<generator class="native"/>
		</id>

		<property name="name"/>

		<list name="list" table="ListContent" cascade="all">
			<key column="ListHolderId"/>
			<list-index column="sortOrder"/>
			<one-to-many class="com.db4o.test.replication.collections.ListContent"/>
		</list>
	</class>
</hibernate-mapping>
