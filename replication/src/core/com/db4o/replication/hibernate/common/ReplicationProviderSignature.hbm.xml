<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.db4o.replication.hibernate.common.ReplicationProviderSignature"
	       table="ReplicationProviderSignature">
		<id name="id" column="drs_provider_id">
			<generator class="native"/>
		</id>

		<discriminator/>

		<property name="bytes" column="bytes"/>

		<property name="creationTime"/>

		<subclass name="com.db4o.replication.hibernate.common.MySignature"/>
		<subclass name="com.db4o.replication.hibernate.common.PeerSignature"/>
	</class>
</hibernate-mapping>