<!DOCTYPE hibernate-mapping PUBLIC
		"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="property" default-lazy="false" default-cascade="all">
	<class table="ObjectReference" name="com.db4o.replication.hibernate.metadata.ObjectReference">
		<id column="id" type="long">
			<generator class="native"/>
		</id>

		<natural-id mutable="false">
			<component name="uuid">
				<property name="longPart" column="longPart" not-null="true"/>
				<many-to-one name="provider" column="provider" cascade="none" not-null="true"/>
			</component>
		</natural-id>

		<property name="className" column="className"/>
		<property name="objectId" column="objectId"/>

		<property name="version" column="version"/>
		<property name="deleted" column="deleted" type="true_false"/>

	</class>
</hibernate-mapping>
