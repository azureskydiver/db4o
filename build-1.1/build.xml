<project name="build-1.1" basedir="." default="dist" xmlns:ivy="antlib:fr.jayasoft.ivy.ant">
	<import file="common-1.1.xml" />
  
  <target name="dist" description="Produce all db4o, dRS, java, .net, mono distributions.">
  	<antcall target="clean" />
  	<ivy:buildlist reference="buildPath">      
      <fileset dir="../db4ounit.extensions"	includes="build.xml"/>
      <fileset dir="../db4oj/tools"					includes="build.xml"/>

      <fileset dir="../db4oj"								includes="build-1.1.xml"/>
      <fileset dir="../db4ojdk1.2"					includes="build-1.1.xml"/>
      <fileset dir="../db4ojdk5"						includes="build-1.1.xml"/>
      <fileset dir="../drs"									includes="build-1.1.xml"/>
      <fileset dir="../db4oj.tests"					includes="build.xml"/>
      <fileset dir="../db4ojdk1.2/test"			includes="build.xml"/>
      <fileset dir="../db4ojdk5/test"				includes="build.xml"/>
      
      <fileset dir="../db4onqopt"						includes="build.xml"/>
      <fileset dir="../doctor"							includes="build-1.1-dynamic.xml"/>
      <fileset dir="../tutorial"						includes="build.xml"/>
      
      <fileset dir="db4o-java"							includes="build.xml"/>
    </ivy:buildlist>
    
    <subant target="clean"				buildpathref="buildPath" />
    <subant target="publish"			buildpathref="buildPath" />
    <subant target="clean"				buildpathref="buildPath" />
  	
    <echo message="Produced jars, dlls and zips at ${repository.dir}."/>
  </target>
  
  <target name="run-tests" description="Run all db4o, dRS, java, .net, mono tests." depends="dist">
  	<ant antfile="build.xml" dir="run-java-tests" target="run-tests" inheritAll="false" inheritRefs="false"/>
  </target>
	
  <target name="init" depends="">
		<tstamp />
		<mkdir dir="${ivy.cache.dir}" />
		<mkdir dir="${repository.dir}" />
	</target>
	
	<target name="clean" description="--> clean the repo and cache">
    	<delete dir="${ivy.cache.dir}" failonerror="true"/>
    	<delete dir="${repository.dir}" failonerror="true"/>
  </target>
  
  <target name="graph" depends="">
  	<ivy:repreport xml="false" dot="true" />
  </target>
</project>