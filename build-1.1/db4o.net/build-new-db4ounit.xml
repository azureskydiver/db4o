<?xml version="1.0"?>
<project name="New Db4oUnit" default="build">	
	<import file="../common-1.1.xml"/>
	<property name="projectName" value="Db4oUnit" />
	<property name="db4ounit.dir" location="${dir.workspace}/db4ounit" />
	<property name="db4ounit.src.dir" location="${db4ounit.dir}/src" />
	<property name="db4ounit.bin.dir" location="${db4ounit.dir}/bin" />
	<property name="db4ounit.jar.dir" location="${dir.j}/lib" />
	
	<property name="db4ounit.net.dir" location="${dir.n.v6}/${projectName}" />
	<property name="db4ounit.net.src.dir" location="${db4ounit.net.dir}/Db4oUnit" />
	<property name="conversion.workspace.dir" location="${dir.dist}/${projectName}/workspace" />
	
	<property name="tmp.db4ounit.net.dir" location="${tempDir}/${projectName}" />
	<property name="tmp.db4ounit.net.src.dir" location="${tmp.db4ounit.net.dir}/Db4oUnit" />
	
	<macrodef name="updateAssemblyInfoFiles">
		<attribute name="srcdir" />
		<sequential>
			<updateAssemblyInfo version="${db4o.version.full}">
				<fileset dir="@{srcdir}">
					<include name="**/AssemblyInfo.cs" />
				</fileset>
			</updateAssemblyInfo>
		</sequential>
	</macrodef>
	
	<target name="build" depends="buildnet, updateSvnLocalCopy">
	</target>
		
	<target name="buildnet" depends="update-csharp-projects, compilenet">		
		
	</target>
	
	<target name="compilenet">
		<property name="assembly" location="${dir.dist.dll.net}/${projectName}.dll" />		
		<csc outputfile="${assembly}"
			targettype="library"
			srcdir="${tmp.db4ounit.net.dir}"
			executable="${csc.executable}"
			debug="true">
		</csc>
	</target>
	
	<target name="sharpen" depends="prepare-conversion-workspace">
		<sharpen resource="db4ounit/src" workspace="${conversion.workspace.dir}">
			<args>
				<arg value="@sharpen-new-db4ounit-mapping" />
			</args>
		</sharpen>
	</target>
		
	<target name="update-csharp-projects" depends="sharpen">
		<resetDir dir="${tmp.db4ounit.net.src.dir}" />
		
		<copy todir="${tmp.db4ounit.net.dir}">
			<fileset dir="${conversion.workspace.dir}/db4ounitcsharp/src">
				<include name="**/*.cs" />
			</fileset>
		</copy>
		
		<copy todir="${tmp.db4ounit.net.dir}">
			<fileset dir="${db4ounit.net.dir}">
				<exclude name="Db4oUnit/**" />
			</fileset>
		</copy>
		
		<fileset id="db4ounit.files" dir="${tmp.db4ounit.net.dir}">
			<include name="**/*.cs" />
		</fileset>

		<updatecsharpproject projectfile="${tmp.db4ounit.net.dir}/${projectName}-2005.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updatecsharpproject projectfile="${tmp.db4ounit.net.dir}/${projectName}-2003.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>

		<updatecsharpproject projectfile="${tmp.db4ounit.net.dir}/${projectName}-CF-2005.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updatecsharpproject projectfile="${tmp.db4ounit.net.dir}/${projectName}-CF-2003.csdproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updateAssemblyInfoFiles srcdir="${tmp.db4ounit.net.src.dir}" />
	</target>
	
	<target name="prepare-conversion-workspace" depends="init">
		<delete dir="${conversion.workspace.dir}" />
		<mkdir dir="${conversion.workspace.dir}" />
		
		<copy todir="${conversion.workspace.dir}/db4ounit/src">
			<fileset dir="${db4ounit.src.dir}">
				<include name="**/*.java" />
				<exclude name="**/db4o/**/*.java" />
			</fileset>
		</copy>
	</target>
	
	<target name="init">
		<mkdir dir="${db4ounit.jar.dir}" />
	</target>
	<target name="updateSvnLocalCopy" if="updateSvnLocalCopy" >		
		<delete failonerror="false">
			<fileset dir="${db4ounit.net.src.dir}">
				<include name="**/*.cs" />
				<exclude name="**/.svn/**" />
			</fileset>
		</delete>
		<copy todir="${db4ounit.net.src.dir}" overwrite="true">
			<fileset dir="${tmp.db4ounit.net.src.dir}" />
		</copy>
	</target>
</project>