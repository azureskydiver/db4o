<project name="build-build-1.1" basedir="." default="update">
	<!--
		Function of this file: Update the jars in build-1.1/lib of db4o build ant tasks and doctor
	
		Execute this build file ONLY when db4o build ant tasks or doctor has been changed
	
	-->
	
	<property name="db4oDevToolsPath" value="../db4obuild/build-1.1"/>
	<property name="doctorPath" value="../doctor"/>
	
	<target name="update" description="">
		<ant dir="${db4oDevToolsPath}"/>
    <copy todir="lib">
				<fileset dir="${db4oDevToolsPath}/artifact"/>
		</copy>
		
		<!-- does not pre-compile doctor anymore because it is now compiled JIT 
		<ant dir="${doctorPath}" antfile="build-1.1.xml"/>
    <copy todir="lib">
				<fileset dir="${doctorPath}/artifact"/>
		</copy>
		-->
  </target>
</project>