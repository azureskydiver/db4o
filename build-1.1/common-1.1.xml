<project name="common-1.1" basedir="." default="">
	
	<!--
		This file is imported by other build file, 
		the following <dirname> line ensure the properties are loaded correctly
	-->
	<dirname property="imported.basedir" file="${ant.file.common-1.1}"/>

	<!--
		dir.workspace: root folder of the checked out db4o svn modules 
		eclipse.home: eclipse installation root folder
		csc.executable.path.net2: net2 framework installation folder
		csc.executable: OPTIONAL, path to net2 csc executable (default: "csc")
		dir.compactframework: OPTIONAL, net2 compact framework installation folder if available (default: "")
		file.compiler.jdk1.3: path to JDK1.3 compatible javac executable
		font.pdf.base: ttf font to be used for pdf documentation
		file.jvm.jdk1.1: OPTIONAL, path to JDK1.1 compatible java executable (default: "java")
		file.compiler.jdk1.3.args.optional: OPTIONAL, additional arguments needed for a JDK>1.3 javac executable, like "-source 1.3"

		Example:
		dir.workspace = e:/workspace
		eclipse.home = c:/db4o/Apps/eclipse
		csc.executable.path.net2 = C:/WINDOWS/Microsoft.NET/Framework/v2.0.50727/
		csc.executable = ${csc.executable.path.net2}/csc.exe
		dir.compactframework=C:/Program Files/Microsoft.NET/SDK/CompactFramework
		file.compiler.jdk1.3=C:/Program Files/Java/jdk1.5.0_11/bin/javac
		font.pdf.base=C:/WINDOWS/Fonts/VERDANA.TTF
		file.jvm.jdk1.1=C:/Program Files/Java/jdk1.5.0_11/bin/java
		file.compiler.jdk1.3.args.optional=-source 1.3	
	-->
    <property file="${imported.basedir}/machine.properties"/>
	<property file="${imported.basedir}/common-1.1.properties" />
	
	<import file="include/ivyTaskDef.xml"/>
	<import file="include/buildJarMacro.xml"/>
	<import file="include/copyDb4ojMacro.xml"/>
	<import file="include/db4oDevToolsTaskDef.xml"/>
	<import file="include/signJarMacro.xml"/>
	<import file="include/renameJarMacro.xml"/>
	
	<loadfile property="content.gplheader" srcfile="${file.gplheader}" encoding="iso-8859-1" />
</project>