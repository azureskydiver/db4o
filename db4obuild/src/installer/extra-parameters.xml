<?xml version="1.0"?>
<WixBuilderParameters InstallationFolder="PFiles[ProgramFilesFolder]\db4o[PFiles.Db4objects]\db4o-@db4o.version.dotted@[INSTALLDIR]">
	<KnownIds>
		<KnownId>
			<Id>doc.tutorial.Db4oTutorial.exe</Id>
			<Path>doc/tutorial/Db4oTutorial.exe</Path>
		</KnownId>
		
		<KnownId>
			<Id>omn.ObjectManagerEnterprise</Id>
			<Path>omn/ObjectManagerEnterprise-@db4o.version.dotted@-vs@target.vs.version@.msi</Path>
		</KnownId>			
	</KnownIds>

	<Features>
	  <Feature
	  	Id="ApplicationFiles"
		Title="Db4o Runtime"
	  	Description="Db4o core libraries and documentation">
		<Content Include="**/*.*" Exclude="omn*/*.*"/>
		
		<Shortcuts>		
			<Shortcut>
				<Path>doc/tutorial/Db4oTutorial.exe</Path>
				<Name>Db4o Tutorial</Name>
			</Shortcut>
			
			<Shortcut>
				<Path>doc/api/db4o.chm</Path>
				<Name>Db4o API</Name>
			</Shortcut>
		</Shortcuts>
		
	  </Feature>
    
	  <Feature 
		Id="OMN"
		Title="ObjectManager Enterprise"
		Description ="Visual Studio plugin with support for db4o databse object browsing">
		<Content Include="omn/ObjectManagerEnterprise-*.*" />
		
		<Shortcuts>		
			<Shortcut>
				<Path>omn/ObjectManagerEnterprise-@db4o.version.dotted@-vs@target.vs.version@.msi</Path>
				<Name>Install ObjectManager VS plugin</Name>
			</Shortcut>
		</Shortcuts>
	  </Feature>
	 </Features>	

</WixBuilderParameters>
		
