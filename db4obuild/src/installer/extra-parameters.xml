<?xml version="1.0"?>
<WixBuilderParameters InstallationFolder="PFiles[ProgramFilesFolder]\Db4objects[PFiles.Db4objects]\db4o-@db4o.version.dotted@[INSTALLDIR]">
	<KnownIds>
		<KnownId>
			<Id>doc.tutorial.Db4oTutorial.exe</Id>
			<Path>doc/tutorial/Db4oTutorial.exe</Path>
		</KnownId>
		
		<KnownId>
			<Id>omn.ObjectManagerEnterprise_vs2005</Id>
			<Path>omn2005/ObjectManagerEnterprise-vs2005-@db4o.version.dotted@.msi</Path>
		</KnownId>
		
		<KnownId>
			<Id>omn.ObjectManagerEnterprise_vs2008</Id>
			<Path>omn2008/ObjectManagerEnterprise-vs2008-@db4o.version.dotted@.msi</Path>
		</KnownId>	
	</KnownIds>

	<Features>
	  <Feature
	  	Id="ApplicationFiles"
		Title="Db4o Runtime"
	  	Description="Db4o core libraries and documentation">
		<Content Include="**/*.*" Exclude="omn*/*.*"/>
		
		<Shortcuts>		
			<Shortcut>
				<Path>doc/tutorial/Db4oTutorial.exe</Path>
				<Name>Db4o Tutorial</Name>
			</Shortcut>
			
			<Shortcut>
				<Path>doc/api/db4o.chm</Path>
				<Name>Db4o API</Name>
			</Shortcut>
		</Shortcuts>
		
	  </Feature>
    
	  <Feature 
		Id="OMN_2005"
		Title="ObjectManager Enterprise VS 2005"
		Description ="Visual Studio 2005 plugin with support for db4o databse object browsing">
		<Content Include="omn2005/ObjectManagerEnterprise-vs2005*.*" />
		
		<Shortcuts>		
			<Shortcut>
				<Path>omn2005/ObjectManagerEnterprise-vs2005-@db4o.version.dotted@.msi</Path>
				<Name>Install VS 2005 ObjectManager plugin</Name>
			</Shortcut>
		</Shortcuts>
	  </Feature>	  
	 
	  <Feature 
		Id="OMN_2008"
		Title="ObjectManager Enterprise VS 2008"
		Description ="Visual Studio 2008 plugin with support for db4o databse object browsing">
		<Content Include="omn2008/ObjectManagerEnterprise-vs2008*.*" />
		
		<Shortcuts>		
			<Shortcut>
				<Path>omn2008/ObjectManagerEnterprise-vs2008-@db4o.version.dotted@.msi</Path>
				<Name>Install VS 2008 ObjectManager plugin</Name>
			</Shortcut>
		</Shortcuts>		
	  </Feature>	  	  
	 
	 </Features>	

</WixBuilderParameters>
		
