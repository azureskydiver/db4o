			debug="true">
		</csc>
	</target>
	
	<target name="build-nq" depends="build-core, build-instrumentation, sharpen-nq">
			
		<fileset id="nq.sources" dir="${dir.n.v6.nq}">
			<include name="**/*.cs" />
		</fileset>
				
		<csc-all
			assemblyName="Db4objects.Db4o.NativeQueries"
			sources="nq.sources">			
			
			<references>
				<reference dir="${dir.dist.dll.net}">
					<include name="Db4objects.Db4o.dll" />
					<include name="Db4objects.Db4o.Instrumentation.dll" />
					<include name="Mono.Cecil.dll" />
					<include name="Cecil.FlowAnalysis.dll" />
				</reference>
			</references>
			
			<compact-args>
				<arg value="/r:${dir.dist.dll.compact}/Db4objects.Db4o.dll" />
				<arg value="/r:${dir.dist.dll.compact}/Db4objects.Db4o.Instrumentation.dll" />
				<arg value="/r:${dir.dist.dll.compact}/Mono.Cecil.dll" />
				<arg value="/r:${dir.dist.dll.compact}/Cecil.FlowAnalysis.dll" />
			</compact-args>
		</csc-all>
	</target>
	
	<target name="build-instrumentation" depends="build-core, sharpen-instrumentation">
		
		<fileset id="instrumentation.sources" dir="${dir.n.v6.instrumentation}">
