<?xml version="1.0"?>
<project name="New Db4oUnit" default="build">
	<import file="common.xml" />
	
	<property name="projectName" value="Db4oUnit" />
	<property name="db4ounit.dir" location="${dir.workspace}/db4ounit" />
	<property name="db4ounit.src.dir" location="${db4ounit.dir}/src" />
	<property name="db4ounit.bin.dir" location="${db4ounit.dir}/bin" />
	<property name="db4ounit.jar.dir" location="${dir.j}/lib" />
	
	<property name="dir.n.v6" location="../db4o.net" />	
	<property name="db4ounit.net.dir" location="${dir.n.v6}/${projectName}" />
	<property name="db4ounit.net.src.dir" location="${db4ounit.net.dir}" />
	<property name="conversion.workspace.dir" location="${dir.dist}/${projectName}/workspace" />
	
	<target name="build" depends="buildjava, buildnet">
	</target>
	
	<target name="buildjava" depends="init">
		<delete>
			<fileset dir="${db4ounit.bin.dir}">
				<include name="**/*.class"/>
			</fileset>
		</delete>
		<javac compiler="classic"
			fork="yes"
			executable="${file.compiler.jdk1.3}"
			srcdir="${db4ounit.src.dir}"
			destdir="${db4ounit.bin.dir}"
			debug="off"
			encoding="UTF-8">
			<compilerarg line="${file.compiler.jdk1.3.args.line}"/>
		</javac>
		
		<!--
		<jar destfile="${db4ounit.jar}">
			<fileset dir="${db4ounit.bin.dir}">
				<include name="**/*.class" />
			</fileset>
		</jar>
		-->
		
	</target>
		
	<target name="buildnet" depends="update-csharp-projects, compilenet">		
		
	</target>
	
	<target name="compilenet">
		<property name="assembly" location="${dir.dist.dll.net}/${projectName}.dll" />		
		<csc outputfile="${assembly}"
			targettype="library"
			srcdir="${db4ounit.net.src.dir}"
			executable="${csc.executable}"
			debug="true">
		</csc>
	</target>
	
	<target name="sharpen" depends="prepare-conversion-workspace, install-javatocsharp-plugin">
		<sharpen resource="db4ounit/src" workspace="${conversion.workspace.dir}">
			<args>
				<arg value="@sharpen-new-db4ounit-mapping" />
			</args>
		</sharpen>
	</target>
		
	<target name="update-csharp-projects" depends="sharpen">
		<delete dir="${db4ounit.net.src.dir}/Db4oUnit">
			<include name="**/*.cs" />
			<exclude name="**/.svn/**" />
		</delete>
		<mkdir dir="${db4ounit.net.src.dir}" />
		<copy todir="${db4ounit.net.src.dir}">
			<fileset dir="${conversion.workspace.dir}/db4ounit.net/src">
				<include name="**/*.cs" />
			</fileset>
		</copy>
		
		<fileset id="db4ounit.files" dir="${db4ounit.net.dir}">
			<include name="**/*.cs" />
		</fileset>

		<updatecsharpproject projectfile="${db4ounit.net.dir}/${projectName}-2005.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updatecsharpproject projectfile="${db4ounit.net.dir}/${projectName}-2003.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>

		<updatecsharpproject projectfile="${db4ounit.net.dir}/${projectName}-CF-2005.csproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updatecsharpproject projectfile="${db4ounit.net.dir}/${projectName}-CF-2003.csdproj">
			<sources refid="db4ounit.files" />
		</updatecsharpproject>
		
		<updateAssemblyInfoFiles srcdir="${db4ounit.net.src.dir}" />
	</target>
	
	<target name="prepare-conversion-workspace" depends="init">
		<delete dir="${conversion.workspace.dir}" />
		<mkdir dir="${conversion.workspace.dir}" />
		
		<copy todir="${conversion.workspace.dir}/db4ounit/src">
			<fileset dir="${db4ounit.src.dir}">
				<include name="**/*.java" />
				<exclude name="**/db4o/**/*.java" />
			</fileset>
		</copy>
	</target>
	
	<target name="init">
		<mkdir dir="${db4ounit.jar.dir}" />
	</target>
</project>