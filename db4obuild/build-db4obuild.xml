<project name="compilebuild" default="compileall" basedir=".">
	<property environment="env" />
	<property name="path.machine.properties" value="machine.properties" />
	<property file="${path.machine.properties}" />
	<property file="ant.properties" />
	
	<target name="compiledb4obuild" depends="" description="Compile db4obuild">
		<delete dir="${dir.build.bin}" includes="**/*"/>
		<mkdir dir="${dir.build.bin}" />
		<javac fork="true" srcdir="${dir.build.src}" destdir="${dir.build.bin}" source="1.5" target="1.5" encoding="UTF-8">
			<classpath>
				<dirset dir="${dir.build.bin}"/>
				<fileset dir="${dir.build.lib}">
					<include name="**/*.jar" />
				</fileset>
			</classpath>
			<exclude name="**/osgi/**/*.java" />
		</javac>
		<!-- TODO get rid of this 'fork' -->
		<javac fork="true" srcdir="${dir.build.src}" destdir="${dir.build.bin}" source="1.3" target="1.1" encoding="UTF-8">
			<classpath>
				<dirset dir="${dir.build.bin}"/>
				<fileset dir="${dir.build.lib}">
					<include name="*.jar" />
				</fileset>
			</classpath>
			<include name="**/osgi/**/*.java" />
		</javac>
	</target>
	
	<target name="compiledoctor" depends="" description="Compile Doctor">
		<ant antfile="${dir.build}/build-doctor.xml" dir="${dir.build}"/>
	</target>

	<target name="compileall" depends="compiledoctor,compiledb4obuild" description="Compile everything needed for the main ant script tasks"/>
</project>