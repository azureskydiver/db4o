<project name="compiledb4odev" default="compiledb4odev" basedir=".">
	<property file="ant.properties" />

	<target name="compiledb4odev" depends="" description="Compile db4odev and Doctor sources">
		<delete dir="${dir.bin.doctor}" includes="**/*"/>
		<delete dir="${dir.bin.devtools}" includes="**/*"/>
		<mkdir dir="${dir.bin.doctor}" />
		<echo message="${dir.lib.doctor}"/>
		<javac srcdir="${dir.src.doctor}"
				destdir="${dir.bin.doctor}"
				debug="off"
				target="1.3"
				source="1.3">
			<classpath>
				<pathelement path="${path.classpath.full}"/>
				<fileset dir="${dir.lib.doctor}" includes="*.jar" />
			</classpath>	
		</javac>
		
		<mkdir dir="${dir.bin.devtools}" />
		<javac srcdir="${dir.src.devtools}" destdir="${dir.bin.devtools}" excludes="sharpen/eclipse/**" target="1.1" source="1.2"/>
		<javac srcdir="${dir.src.devtools}" destdir="${dir.bin.devtools}" includes="sharpen/eclipse/**" target="1.3" source="1.3">
			<classpath>
				<dirset dir="${dir.bin.devtools}"/>
				<fileset dir="${dir.lib.sharpeneclipse}">
					<include name="*.jar" />
				</fileset>
			</classpath>
		</javac>
	</target>
</project>