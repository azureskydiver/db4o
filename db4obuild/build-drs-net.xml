<?xml version="1.0"?>
<project name="drs.net" default="build">
	<import file="common.xml" />
	
	<property name="drs.dir" location="${dir.workspace}/replication" />
	<property name="drs.src.dir" location="${drs.dir}/src" />
	<property name="drs.net.dir" location="${drs.dir}/drs.net" />
	<property name="drs.net.bin.dir" location="${drs.net.dir}/bin" />	
	<property name="drs.net.src.dir" location="${drs.net.dir}/core/src" />
	<property name="drs.net.in.dir" location="${drs.net.dir}/in" />
	<property name="conversion.workspace.dir" location="${dir.dist}/drs.net/workspace" />
	
	<target name="build" depends="update-csharp-projects">
		
		<property name="drs.dll" location="${drs.net.bin.dir}/drs.dll" />
		
		<csc outputfile="${drs.dll}"
			targettype="library"
			srcdir="${drs.net.src.dir}">
			<reference dir="${drs.net.bin.dir}">
				<include name="db4o.dll" />
			</reference>
		</csc>
	</target>
	
	<target name="sharpen" depends="prepare-conversion-workspace, install-javatocsharp-plugin">
		<sharpen resource="drs/core" workspace="${conversion.workspace.dir}">
			<args>
				<arg value="-cp" />
				<arg path="${file.java5.jar}" />
				
				<arg value="-srcfolder" />
				<arg value="test" />
				
				<arg value="-pascalcase" />
			</args>
		</sharpen>
	</target>
		
	<target name="update-csharp-projects" depends="sharpen">
		<delete dir="${drs.net.src.dir}" />
		<mkdir dir="${drs.net.src.dir}" />
		<copy todir="${drs.net.src.dir}">
			<fileset dir="${conversion.workspace.dir}/drscsharp/src">
				<include name="**/*.cs" />
			</fileset>
		</copy>
		<copy todir="${drs.net.src.dir}" overwrite="true">
			<fileset dir="${drs.net.in.dir}">
				<include name="**/*.cs" />
			</fileset>
		</copy>
		
		<updatecsharpproject projectfile="${drs.net.dir}/core/drs.csproj">
			<sources dir="${drs.net.dir}/core">
				<include name="**/*.cs" />
			</sources>
		</updatecsharpproject>
	</target>
	
	<target name="prepare-conversion-workspace" depends="init">
		<delete dir="${conversion.workspace.dir}" />
		<mkdir dir="${conversion.workspace.dir}" />
		
		<copy todir="${conversion.workspace.dir}/drs">
			<fileset dir="${drs.src.dir}">
				<include name="core/**/*.java" />
				
				<include name="test/**/ReplicationTestCase.java" />
				<include name="test/**/ReplicationFeaturesMain.java" />
				
				<exclude name="**/hibernate/**" />
				<exclude name="**/VectorFlattener.java" />
			</fileset>
		</copy>
	</target>
	
	<target name="init">
		<mkdir dir="${drs.net.dir}" />
		<mkdir dir="${drs.net.bin.dir}" />
		<copy file="${file.dll.net}" todir="${drs.net.bin.dir}" />
	</target>
</project>