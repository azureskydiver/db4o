<project name="doctor" default="compiledb4odev" basedir=".">

	<property file="machine.properties" />
	<property file="ant.properties" />

	<target name="compiledb4odev" depends="" description="Compile db4odev and Doctor sources">
		<delete dir="${dir.doctor.bin}" includes="**/*"/>
		<delete dir="${dir.build.bin}" includes="**/*"/>
		<mkdir dir="${dir.doctor.bin}" />
		<javac srcdir="${dir.doctor.src}"
				destdir="${dir.doctor.bin}"
				debug="off"
				target="1.3"
				source="1.3">
			<classpath>
				<pathelement path="${path.classpath.full}"/>
				<fileset dir="${dir.doctor.lib}" includes="*.jar" />
			</classpath>	
		</javac>
