<project name="doctor" default="compiledoctor" basedir=".">

	<property file="machine.properties" />
	<property file="ant.properties" />

	<target name="compiledoctor" depends="" description="Compile db4odev and Doctor sources">
		<mkdir dir="${dir.doctor.bin}" />
		<mkdir dir="${dir.build.bin}" />
		<delete dir="${dir.doctor.bin}" includes="**/*" failonerror="false"/>
		<delete dir="${dir.build.bin}" includes="**/*" failonerror="false"/>
		<javac srcdir="${dir.doctor.src}"
				fork="true"
				destdir="${dir.doctor.bin}"
				debug="off"
				target="1.3"
				source="1.3">
			<classpath>
				<pathelement path="${path.classpath.full}"/>
				<fileset dir="${dir.doctor.lib}" includes="*.jar" />
			</classpath>	
		</javac>
	</target>
</project>