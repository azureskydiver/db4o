<?xml version="1.0" encoding="UTF-8"?>
<xswt xmlns:x="http://sweet_swt.sf.net/xswt">
    <import xmlns="http://sweet_swt.sf.net/xswt">
        <package name="java.lang"/>
        <package name="org.eclipse.swt.widgets"/>
        <package name="org.eclipse.swt.layout"/>
    </import>
    <getShell menuBar="menuBar">
    	<x:children>
			<menu x:style="BAR" x:id="menuBar">
				<x:children>
					<menuItem text="&amp;File" x:style="CASCADE" menu="fileMenu"/>
					<menuItem text="&amp;Help" x:style="CASCADE" menu="helpMenu"/>
				</x:children>
			</menu>
			
			<menu x:style="DROP_DOWN" x:id="fileMenu">
				<x:children>
					<menuItem x:id="Open" text="&amp;Open..."/>
					<menuItem x:id="OpenServer" text="Connect to &amp;server..."/>
					<menuItem x:id="Query" text="&amp;Query..."/>
					<menuItem x:id="Preferences" text="&amp;Preferences..."/>
					<!--<menuItem x:id="ExtendClasspath" text="&amp;Extend classpath..." x:style="CASCADE"  menu="classpathMenu"/>-->
					<menuItem x:style="SEPARATOR"/>
					<menuItem x:id="NewWindow" text="&amp;New Window"/>
					<menuItem x:style="SEPARATOR"/>
					<menuItem x:id="Close" text="&amp;Close"/>
				</x:children>
			</menu>
			
			<!--
			<menu x:style="DROP_DOWN" x:id="classpathMenu">
				<x:children>
					<menuItem x:id="AddDirToClasspath" text="&amp;Add directory to path..."/>
					<menuItem x:id="AddFileToClasspath" text="&amp;Add zip or jar file to path..."/>
				</x:children>
			</menu>-->

			<menu x:style="DROP_DOWN" x:id="helpMenu">
				<x:children><!-- No online help yet... :-(
					<menuItem x:id="HelpContents" text="Help &amp;Contents..."/>
					<menuItem x:style="SEPARATOR"/>-->
					<menuItem x:id="HelpAbout" text="&amp;About..."/>
				</x:children>
			</menu>
			
    	</x:children>
    </getShell>
</xswt>
