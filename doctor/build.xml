<?xml version="1.0"?>
<project name="rundoctor" default="run" basedir=".">
	
	<property name="workspace" value="/db4o/HEAD" />
	<property name="pdffont" value="/usr/X11R6/lib/X11/fonts/truetype/verdana.ttf" />
	
	<target name="run" description="runs doctor locally and passes the workspace path">
		<java classname="com.yetac.doctor.Doctor">
			<classpath>
				<path path="bin" />
				<path path="${workspace}/db4oj/bin" />
				<path path="lib/ant.jar" />
				<path path="lib/iText.jar" />
				<path path="lib/junit.jar" />
			</classpath>
			<arg value="${workspace}"/>
			<arg value="${pdffont}"/>
		</java>
	</target>
</project>
